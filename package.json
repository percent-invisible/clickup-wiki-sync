{
  "name": "clickup-offline-wiki",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsc --watch --project tsconfig.json",
    "cli": "node dist/index.js",
    "sync-wiki": "npm run build && node dist/index.js sync",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "validate": "npm run build && npm run validate:output && npm run validate:links && npm run validate:structure",
    "validate:output": "npm run build && ts-node tests/validation/output-comparison.test.ts",
    "validate:links": "npm run build && vitest run tests/validation/link-transformation.test.ts",
    "validate:structure": "npm run build && vitest run tests/validation/directory-structure.test.ts"
  },
  "dependencies": {
    "@esbuild/darwin-arm64": "^0.25.4",
    "axios": "^1.6.7",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^3.14.1",
    "markdown-it": "^12.3.2"
  },
  "devDependencies": {
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^13.0.7",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitest/ui": "1.6.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~4.9.5",
    "vitest": "^1.6.1"
  }
}
